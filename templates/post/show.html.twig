{% extends 'base.html.twig' %}

{% block title %}Post Details{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Post Details</h1>
                <span class="badge bg-light text-dark">ID: {{ post.id }}</span>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th class="col-4">Title</th>
                            <td>{{ post.title }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ post.content }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% if post.image %}
                                    <img src="{{ post.image }}" alt="{{post.image}}" class="img-fluid" style="width: 200px; height: 200px; object-fit: cover;">
                                {% else %}
                                    No image available
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Published Status</th>
                            <td>
                                <span class="badge {{ post.isPublished ? 'bg-success' : 'bg-secondary' }}">
                                    {{ post.isPublished ? 'Yes' : 'No' }}
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_post_edit', {'ref': post.ref}) }}" class="btn btn-warning">
                            <i class="bi bi-pencil me-2"></i>Edit
                        </a>
                        {{ include('post/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}