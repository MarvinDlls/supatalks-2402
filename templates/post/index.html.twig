{% extends 'base.html.twig' %}

{% block title %}Post Index{% endblock %}

{% block body %}
    <div class="container-fluid px-4 mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Post Index</h1>
                <a href="{{ path('app_post_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i>Create New Post
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Published</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.id }}</td>
                                <td>{{ post.title }}</td>
                                <td>{{ post.content|slice(0, 50) }}...</td>
                                <td>
                                    {% if post.image %}
                                        <img src="{{ post.image }}" alt="Post Image" class="img-thumbnail" style="max-width: 100px;">
                                    {% else %}
                                        <span class="text-muted">No Image</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge {{ post.isPublished ? 'bg-success' : 'bg-secondary' }}">
                                        {{ post.isPublished ? 'Yes' : 'No' }}
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_post_show', {'ref': post.id}) }}" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye me-1"></i>Show
                                        </a>
                                        <a href="{{ path('app_post_edit', {'ref': post.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                    No records found
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}